@page
@attribute [RazorCompiledItemMetadata("RouteTemplate", Urls.HomeUrl)]
@using Infrastructure.Interfaces
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Razor.Hosting
@using Newtonsoft.Json
@using StructuredLogExplorer
@inject IProjectService ProjectService
@model StructuredLogExplorer.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<input id="availableProjects" type="hidden" value='@Html.Raw(JsonConvert.SerializeObject(ProjectService.GetAvailableProjects()))'/>

@section HeadSection {
    <link href="~/build/index.css" asp-append-version="true" rel="stylesheet" />
    <script defer src="~/build/index.js" asp-append-version="true"></script>
}
